@model Larich.Achiever.Web.Areas.Manage.ViewModels.Achiever.UpdateTitleViewModel
@{
    ViewData["Title"] = "UpdateTitle";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<h2>Update Title Achievers</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/achievers/update-title" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input type="text" class="form-control" name="Title" value="@Model.Title" />
            </div>  
            <div class="form-group">
                <label for="PostExpiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="Post Expiry" value="@Model.PostExpiry" />
            </div>
            <div class="form-group">
                <label for="Template">Template:</label>
                <select name="TemplateName">

                    <option value="post 1" @(Model.TemplateName == "achievers 1" ? "selected" : "")>post 1</option>
                    <option value="post 2" @(Model.TemplateName == "achievers 2" ? "selected" : "")>post 2</option>
                    <option value="post 3" @(Model.TemplateName == "achievers 3" ? "selected" : "")>post 3</option>
                </select>


            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/achievers/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#PostExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}